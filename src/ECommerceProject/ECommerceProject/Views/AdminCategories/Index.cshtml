@model IEnumerable<ECommerceProject.Models.Category>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; ViewData["Title"] = "Quản lý Danh mục";
}

<a asp-action="Create" class="btn btn-success mb-3 shadow-sm"><i class="fas fa-plus"></i> Thêm danh mục</a>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-bordered table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th>ID</th>
                    <th>Tên Danh Mục</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryId</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm text-white">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm" onclick="return confirm('Xóa danh mục này sẽ ảnh hưởng đến các sản phẩm thuộc về nó. Tiếp tục?');">
                                <i class="fas fa-trash-alt"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>