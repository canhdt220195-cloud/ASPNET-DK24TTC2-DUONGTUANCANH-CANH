@model ECommerceProject.Models.Customer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa thông tin tài khoản";
}

<div class="container-fluid">
    <h4 class="mb-4 fw-bold text-primary">Sửa thông tin tài khoản #@Model.CustomerId</h4>

    <div class="card shadow-sm" style="max-width: 600px;">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" name="id" value="@Model.CustomerId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Họ</label>
                        <input type="text" name="lastName" class="form-control" value="@Model.LastName" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tên</label>
                        <input type="text" name="firstName" class="form-control" value="@Model.FirstName" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <input type="email" name="email" class="form-control" value="@Model.Email" required />
                </div>

                <!-- THÊM Ô NHẬP SĐT -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Số điện thoại</label>
                    <input type="text" name="phone" class="form-control" value="@Model.Phone" placeholder="Nhập số điện thoại" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Địa chỉ</label>
                    <input type="text" name="address" class="form-control" value="@Model.Address" />
                </div>

                <div class="mb-4 p-3 bg-light border rounded">
                    <label class="form-label fw-bold text-danger">Đặt lại mật khẩu mới</label>
                    <input type="text" name="newPassword" class="form-control" placeholder="Bỏ trống nếu không muốn đổi pass" />
                    <small class="text-muted">Nhập mật khẩu mới vào đây để đổi pass cho user này.</small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4 fw-bold">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>