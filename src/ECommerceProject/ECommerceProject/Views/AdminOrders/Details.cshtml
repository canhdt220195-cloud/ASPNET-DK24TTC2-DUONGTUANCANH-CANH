@model ECommerceProject.Models.Cart

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold text-primary">Chi tiết đơn hàng #@Model.CartId</h3>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<!-- PHẦN 1: TRẠNG THÁI ĐƠN HÀNG & NÚT XỬ LÝ -->
<div class="card shadow-sm mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <span class="fw-bold me-2">Trạng thái hiện tại:</span>
            @if (Model.OrderStatus == 0)
            {
                <span class="badge bg-warning text-dark fs-6">Chờ xác nhận</span>
            }
            else if (Model.OrderStatus == 1)
            {
                <span class="badge bg-primary fs-6">Đang giao hàng</span>
            }
            else if (Model.OrderStatus == 2)
            {
                <span class="badge bg-success fs-6">Giao thành công</span>
            }
            else
            {
                <span class="badge bg-danger fs-6">Đã hủy</span>
            }
        </div>

        <!-- Các nút cập nhật trạng thái -->
        <div class="btn-group">
            @if (Model.OrderStatus == 0)
            {
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.CartId" />
                    <input type="hidden" name="newStatus" value="1" />
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-truck me-1"></i> Xác nhận & Giao hàng
                    </button>
                </form>
            }

            @if (Model.OrderStatus == 1)
            {
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.CartId" />
                    <input type="hidden" name="newStatus" value="2" />
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fas fa-check me-1"></i> Hoàn tất đơn hàng
                    </button>
                </form>
            }

            <!-- Nút Hủy đơn (Chỉ hiện khi chưa hoàn thành hoặc chưa hủy) -->
            @if (Model.OrderStatus == 0 || Model.OrderStatus == 1)
            {
                <form asp-action="UpdateStatus" method="post" onsubmit="return confirm('Bạn chắc chắn muốn hủy đơn hàng này?');">
                    <input type="hidden" name="id" value="@Model.CartId" />
                    <input type="hidden" name="newStatus" value="3" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times me-1"></i> Hủy đơn hàng
                    </button>
                </form>
            }
        </div>
    </div>
</div>

<div class="row">
    <!-- Cột 1: Thông tin khách hàng -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-info text-white fw-bold">
                <i class="fas fa-user me-2"></i>Thông tin khách hàng
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>Họ tên:</strong> @Model.Customer?.LastName @Model.Customer?.FirstName</p>
                <p class="mb-2"><strong>Email:</strong> <a href="mailto:@Model.Customer?.Email">@Model.Customer?.Email</a></p>
                <p class="mb-2"><strong>SĐT:</strong> <a href="tel:@Model.Customer?.Phone" class="fw-bold text-danger">@Model.Customer?.Phone</a></p>
                <p class="mb-2"><strong>Địa chỉ giao hàng:</strong></p>
                <div class="alert alert-light border">
                    @(Model.Customer?.Address ?? "Không có địa chỉ")
                </div>
                <p class="mb-0"><strong>Ngày đặt hàng:</strong> @Model.DateCreated.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>
    </div>

    <!-- Cột 2: Danh sách sản phẩm -->
    <div class="col-md-8 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-primary text-white fw-bold">
                <i class="fas fa-box-open me-2"></i>Sản phẩm đã mua
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Sản phẩm</th>
                                <th class="text-center">Đơn giá</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.CartDetails)
                            {
                                <tr>
                                    <td class="ps-4 align-middle">
                                        <div class="d-flex align-items-center">
                                            <!-- Ảnh sản phẩm nhỏ -->
                                            <img src="~/images/@(detail.Product?.ImageUrl ?? "default.jpg")"
                                                 class="rounded border me-3"
                                                 style="width: 50px; height: 50px; object-fit: cover;" />

                                            <!-- Tên sản phẩm -->
                                            <div>
                                                <span class="fw-bold d-block">@(detail.Product?.ProductName ?? "Sản phẩm đã xóa")</span>
                                                <small class="text-muted">ID: @detail.ProductId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center">@detail.PriceAtTime.ToString("#,##0")</td>
                                    <td class="align-middle text-center">
                                        <span class="badge bg-secondary px-3 py-2">x @detail.Quantity</span>
                                    </td>
                                    <td class="align-middle text-end pe-4 fw-bold text-primary">
                                        @((detail.PriceAtTime * detail.Quantity).ToString("#,##0"))
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light border-top">
                            <tr>
                                <td colspan="3" class="text-end fw-bold py-3 fs-5">TỔNG CỘNG THANH TOÁN:</td>
                                <td class="text-end fw-bold text-danger fs-4 py-3 pe-4">
                                    @Model.CartDetails.Sum(d => d.PriceAtTime * d.Quantity).ToString("#,##0") VNĐ
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>