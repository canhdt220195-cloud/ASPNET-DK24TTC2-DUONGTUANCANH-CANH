@model ECommerceProject.Models.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa sản phẩm";
}

<div class="container-fluid">
    <h3 class="mb-4">Cập nhật thông tin sản phẩm</h3>

    <div class="card shadow-sm">
        <div class="card-body">
            <!-- enctype="multipart/form-data" là bắt buộc để upload ảnh -->
            <form asp-action="Edit" method="post" enctype="multipart/form-data">

                <!-- Giữ ID để biết đang sửa sản phẩm nào -->
                <input type="hidden" asp-for="ProductId" />

                <div class="row">
                    <!-- Cột trái: Thông tin chữ -->
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Tên sản phẩm</label>
                                <input asp-for="ProductName" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Giá tiền (VNĐ)</label>
                                <input asp-for="Price" type="number" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Danh mục</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Số lượng tồn kho</label>
                                <input asp-for="StockQuantity" type="number" class="form-control" />
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label fw-bold">Mô tả chi tiết</label>
                                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Cột phải: Hình ảnh -->
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-header fw-bold">Hình ảnh sản phẩm</div>
                            <div class="card-body text-center">
                                <!-- Hiển thị ảnh hiện tại -->
                                <img src="~/images/@Model.ImageUrl" class="img-thumbnail mb-3" style="max-height: 200px;" alt="Ảnh hiện tại" />
                                <p class="text-muted small">Ảnh hiện tại</p>

                                <!-- Chọn ảnh mới -->
                                <label class="form-label fw-bold text-start w-100">Thay đổi ảnh mới:</label>
                                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                                <small class="text-danger d-block mt-2 text-start">* Bỏ trống nếu muốn giữ nguyên ảnh cũ.</small>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <!-- Nút hành động -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning text-white px-4 fw-bold">
                        <i class="fas fa-save me-2"></i>Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left me-2"></i>Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>