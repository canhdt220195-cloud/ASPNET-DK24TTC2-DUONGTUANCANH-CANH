<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Quản Trị</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
            background-color: #f8f9fa;
        }

        /* Sidebar Styles */
        #sidebar-wrapper {
            min-width: 260px;
            max-width: 260px;
            background-color: #343a40;
            color: white;
            display: flex;
            flex-direction: column;
        }

        .sidebar-heading {
            padding: 1.5rem;
            font-size: 1.4rem;
            font-weight: bold;
            text-align: center;
            background: #212529;
            border-bottom: 1px solid #4b545c;
        }

        .list-group-item {
            background-color: #343a40;
            color: #c2c7d0;
            border: none;
            padding: 15px 20px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .list-group-item:hover {
                background-color: #495057;
                color: #fff;
                padding-left: 25px; /* Hiệu ứng trượt nhẹ */
            }

            .list-group-item i {
                width: 25px;
                text-align: center;
                margin-right: 10px;
            }

        /* Content Styles */
        #page-content-wrapper {
            flex: 1;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
        }
    </style>
</head>
<body>

    <!-- MENU BÊN TRÁI (SIDEBAR) -->
    <div id="sidebar-wrapper">
        <div class="sidebar-heading">
            <i class="fas fa-user-shield me-2"></i>Admin CP
        </div>
        <div class="list-group list-group-flush mt-3">
            <!-- 1. Dashboard -->
            <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>

            <!-- 2. Quản lý Sản phẩm -->
            <a asp-controller="AdminProducts" asp-action="Index" class="list-group-item list-group-item-action">
                <i class="fas fa-box"></i> Quản lý Sản phẩm
            </a>

            <!-- 3. Quản lý Danh mục -->
            <a asp-controller="AdminCategories" asp-action="Index" class="list-group-item list-group-item-action">
                <i class="fas fa-tags"></i> Quản lý Danh mục
            </a>

            <!-- 4. Quản lý Đơn hàng -->
            <a asp-controller="AdminOrders" asp-action="Index" class="list-group-item list-group-item-action">
                <i class="fas fa-shopping-bag"></i> Quản lý Đơn hàng
            </a>

            <!-- 5. Quản lý Tài khoản (Mới thêm) -->
            <a asp-controller="AdminAccounts" asp-action="Index" class="list-group-item list-group-item-action">
                <i class="fas fa-users"></i> Quản lý Tài khoản
            </a>

            <!-- Nút Đăng xuất (Đẩy xuống dưới) -->
            <div class="mt-auto pb-4 pt-4 px-3">
                <a asp-controller="Admin" asp-action="Logout" class="btn btn-danger w-100 fw-bold">
                    <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                </a>
            </div>
        </div>
    </div>

    <!-- NỘI DUNG CHÍNH -->
    <div id="page-content-wrapper">
        <!-- Header nhỏ phía trên -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-4 py-3">
            <div class="d-flex justify-content-between w-100 align-items-center">
                <h4 class="m-0 text-dark fw-bold">@ViewData["Title"]</h4>
                <span class="text-muted">Xin chào, Admin!</span>
            </div>
        </nav>

        <!-- Phần nội dung thay đổi theo từng trang -->
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>